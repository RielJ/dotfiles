# Volume control
bindsym {
   XF86AudioRaiseVolume exec pamixer -ui 5 && pamixer --get-volume > $SWAYSOCK.wob
   XF86AudioLowerVolume exec pamixer -ud 5  && pamixer --get-volume > $SWAYSOCK.wob
   XF86AudioMute exec pamixer --toggle-mute && ( pamixer --get-mute && echo 0 > $SWAYSOCK.wob ) || pamixer --get-volume > $SWAYSOCK.wob
   $mod+Shift+f1 exec pamixer --default-source -t && ( pamixer --default-source --get-mute && echo 0 && notify-send -t 5000 "Mic" "Microphone Muted" ) || notify-send -t 5000 "Mic" "Microphone Activated"
}

# MPRIS controls
bindsym {
    --locked XF86AudioPlay exec playerctl play-pause
    --locked XF86AudioNext exec playerctl next
    --locked XF86AudioPrev exec playerctl previous
}

# Backlight
#wob
bindsym {
   XF86MonBrightnessUp exec light -A 5 && light -G | cut -d'.' -f1 > $SWAYSOCK.wob
   XF86MonBrightnessDown exec light -U 5 && light -G | cut -d'.' -f1 > $SWAYSOCK.wob
}
