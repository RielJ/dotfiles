[
  {
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "modules-left": [
      // "hyprland/workspaces",
      // "hyprland/window",
      "sway/workspaces",
      "sway/window",
    ],
    "modules-center": ["clock"],
    "modules-right": [
      "custom/recorder",
      "backlight",
      "pulseaudio",
      "cpu",
      "memory",
      "network",
      "battery",
      "custom/powermenu",
    ],
    "hyprland/window": {
